# MongoDB Connection
MONGO_URI=mongodb+srv://your_mongodb_uri

# Server Config
PORT=5000
NODE_ENV=development

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# Mobile Money Payment Gateway - MTN
MTN_API_URL=https://sandbox.momoapi.mtn.com
MTN_API_KEY=your_mtn_api_key
MTN_API_SECRET=your_mtn_api_secret
MTN_ENVIRONMENT=sandbox
MTN_CALLBACK_URL=https://your-api-url.com/api/payouts/callback/mtn

# Mobile Money Payment Gateway - Orange Money
ORANGE_API_URL=https://api.orange.com/orange-money-webpay
ORANGE_API_KEY=your_orange_api_key
ORANGE_API_SECRET=your_orange_api_secret
ORANGE_MERCHANT_ID=your_merchant_id
ORANGE_CALLBACK_URL=https://your-api-url.com/api/payouts/callback/orange

# Payment Configuration
MIN_PAYOUT_AMOUNT=50000
DEFAULT_CURRENCY=XAF
PAYOUT_FEE_PERCENTAGE=2.5

# Bank Transfer API
BANK_API_URL=your_bank_api_url
BANK_API_KEY=your_bank_api_key
BANK_API_SECRET=your_bank_api_secret

# Email Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# Security
API_RATE_LIMIT=100
API_RATE_WINDOW=15m
ENCRYPTION_KEY=your_encryption_key

# Webhook Secret
WEBHOOK_SECRET=your_webhook_secret